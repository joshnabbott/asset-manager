<%- content_for :stylesheets do -%>
<%= stylesheet_link_tag '/jcrop/css/jquery.jcrop.css' %>
<%= stylesheet_link_tag('smoothness/jquery-ui-1.7.2.custom')%>
<%- end -%>

<%- content_for :javascripts do -%>
<%= javascript_include_tag '/jcrop/js/jquery.jcrop.js' %>
<%= javascript_include_tag new_image_crop_path(@image, :format => :js, :params => params) %>
<%- end -%>

<h1>New crop</h1>

<% form_for([@image, @crop]) do |f| %>
  <fieldset>
    <%= render :partial => 'form', :locals => { :f => f } %>
    <p>
      <%= f.submit 'Create' %> - or - <%= link_to 'Cancel', [@image, :crops] %>
    </p>
  </fieldset>
<% end %>