<tr class="<%= cycle('even', 'odd') %>">
  <td><%= asset_tag(crop.image, :crop => crop.crop_definition.name, :resize_to => 125) %></td>
  <td><%=h crop.crop_definition.name %></td>
  <td><%=h crop.width %></td>
  <td><%=h crop.height %></td>
  <td><%= link_to 'Show', [@image, crop] %> | <%= link_to 'Edit', [:edit, @image, crop] %> | <%= link_to 'Destroy', [@image, crop], :confirm => 'Are you sure?', :method => :delete %></td>
</tr>