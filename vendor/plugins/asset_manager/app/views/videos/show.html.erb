<h1>Show Video</h1>
<div id="asset_nav">
  <%= link_to 'Edit', edit_video_path(@video) %> |
  <%= link_to 'Back', videos_path %>
</div>
<div>
  <%= @video.embed %>
  <br />
  <% form_for @video, :url => {:controller => "videos", :action => "preview", :id => @video } do |f|-%>
  	<%= hidden_field_tag 'offset' %>
  	<%= submit_tag 'Update Preview', :onclick => "$('#offset').val(((document.getElementById('movie').GetTime() / document.getElementById('movie').GetTimeScale()) * 1000));" %>
  <% end %>
</div>
<p>
  <strong>File Name:</strong> <%= @video.file_file_name %>
</p>
<p>
  <strong>Title:</strong> <%=h @video.title %>
</p>
<p>
  <strong>Tags:</strong> <%=h @video.tag_list %>
</p>
<%= textilize @video.description %>

