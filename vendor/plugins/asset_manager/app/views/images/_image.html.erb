<tr class="<%= cycle('even', 'odd') %>">
  <td><%= check_box_tag 'images[]', image.id %></td>
  <td><%= image.title %></td>
  <td><%= image.file_file_name %></td>
  <td><%= image_tag(image.file(:thumbnail)) %></td>
  <td class="actions">
    <%= link_to 'Show', image %> | 
    <%= link_to 'Edit', edit_image_path(image) %> | 
    <%= "#{link_to 'Crops', [image, :crops]} | " if image.crop_definitions.count > 0 %>
    <%= link_to 'Destroy', image, :confirm => 'Are you sure?', :method => :delete %>
  </td>
</tr>