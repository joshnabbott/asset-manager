<h1>Batch Edit Images</h1>

<%- form_for(@images, :url => update_batch_images_path(@images)) do |f| -%>
  <% @images.in_groups_of(3, false) do |images| %>
  <div class="clearfix">
    <%= render :partial => "images/batch_image", :collection => images, :locals => {:f => f} %>
  </div>
  <% end %>
  <div class="asset_reset"></div>
  <div class="bw"><%= f.submit 'Update All' %> - or - <%= link_to 'Cancel', images_path %></div>
<%- end -%>